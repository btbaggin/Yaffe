{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Yaffe",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/Linux/LinuxYaffe.cpp",
                "-o",
                "${workspaceFolder}/Linux/Yaffe",
                "-lGL",
                "-lX11",
                "-lm",
                "-lstdc++",
                "-I${workspaceFolder}/../libs"w
                "-g"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}